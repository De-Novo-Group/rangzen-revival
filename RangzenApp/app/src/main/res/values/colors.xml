<resources>
    <!-- ============================================ -->
    <!-- DARK THEME - Murmur UI Redesign             -->
    <!-- ============================================ -->
    
    <!-- Primary colors - Blue accent -->
    <color name="primary">#3B82F6</color>
    <color name="primary_dark">#2563EB</color>
    <color name="primary_light">#60A5FA</color>
    
    <!-- Secondary colors - kept for compatibility -->
    <color name="secondary">#8B5CF6</color>
    <color name="secondary_dark">#7C3AED</color>
    <color name="secondary_light">#A78BFA</color>
    
    <!-- Core dark theme colors -->
    <color name="white">#FFFFFF</color>
    <color name="black">#000000</color>
    <color name="background">#09090B</color>          <!-- Near black - main background -->
    <color name="surface">#18181B</color>             <!-- Dark gray - cards, headers -->
    <color name="surface_variant">#27272A</color>     <!-- Slightly lighter - borders, dividers -->
    
    <!-- Text colors for dark theme -->
    <color name="text_primary">#FAFAFA</color>        <!-- Bright white - main text -->
    <color name="text_secondary">#A1A1AA</color>      <!-- Medium gray - pseudonyms, labels -->
    <color name="text_hint">#52525B</color>           <!-- Dark gray - timestamps, hints -->
    
    <!-- Status colors - slightly brighter for dark bg -->
    <color name="success">#22C55E</color>
    <color name="warning">#EAB308</color>
    <color name="error">#EF4444</color>
    
    <!-- Trust score colors - same as status but named for clarity -->
    <color name="trust_high">#22C55E</color>          <!-- Green - trusted/friend -->
    <color name="trust_medium">#EAB308</color>        <!-- Yellow/amber - known -->
    <color name="trust_low">#EF4444</color>           <!-- Red - unknown/new -->
    
    <!-- Like/heart colors -->
    <color name="like_active">#F43F5E</color>         <!-- Pink/red when liked -->
    <color name="like_inactive">#52525B</color>       <!-- Gray when not liked -->
    
    <!-- Peer status dot -->
    <color name="peer_active">#22C55E</color>         <!-- Green dot for active peers -->

    <!-- Transport indicator colors -->
    <color name="transport_bt">#3B82F6</color>        <!-- Blue - Bluetooth -->
    <color name="transport_wd">#F97316</color>        <!-- Orange - WiFi Direct -->
    <color name="transport_nan">#8B5CF6</color>       <!-- Purple - WiFi Aware (NAN) -->
    <color name="transport_lan">#22C55E</color>       <!-- Green - LAN/WiFi -->
    <color name="transport_count">#A1A1AA</color>     <!-- Medium gray - peer counts -->

    <!-- Broadcast colors - distinctive orange for team messages -->
    <color name="broadcast_orange">#F97316</color>    <!-- Vivid orange for broadcasts -->
    <color name="broadcast_bg">#1C1510</color>        <!-- Dark orange-tinted background -->
</resources>
