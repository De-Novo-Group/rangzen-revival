<?xml version="1.0" encoding="utf-8"?>
<!-- Feed layout: compact header with peer status and filters, -->
<!-- then scrollable message list. No title (redundant with tabs). -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Compact header with peer status and filter controls -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="@color/surface"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1: Peer status with transport breakdown -->
        <TextView
            android:id="@+id/status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/status_discovering"
            android:textSize="13sp"
            android:textColor="@color/text_secondary" />

        <!-- Row 2: Filter controls (compact horizontal layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Filter: show only liked messages -->
            <CheckBox
                android:id="@+id/switch_only_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:minHeight="32dp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp" />

            <!-- Filter: hide my own messages -->
            <CheckBox
                android:id="@+id/check_hide_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Hide mine"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:minHeight="32dp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:checked="true" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Sort toggle: Recent / Most hearted -->
            <TextView
                android:id="@+id/btn_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recent â–¼"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Restore swiped/hidden messages -->
            <TextView
                android:id="@+id/btn_show_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Restore swiped"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </LinearLayout>

    <!-- Swipe refresh with message list -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_messages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_feed"
                    android:alpha="0.4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_feed"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
