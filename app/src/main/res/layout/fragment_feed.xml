<?xml version="1.0" encoding="utf-8"?>
<!-- Feed layout: compact header with peer status and filters, -->
<!-- then scrollable message list. No title (redundant with tabs). -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <!-- Compact header with peer status and filter controls -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="12dp"
        android:paddingVertical="8dp"
        android:background="@color/surface"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Row 1: Peer status with transport breakdown -->
        <!-- Shows: [green dot] X peers nearby [BT icon]2 [WD icon]1 [WiFi icon]1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <!-- Status dot (green when peers found) -->
            <View
                android:id="@+id/status_dot"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/circle_avatar"
                android:backgroundTint="@color/peer_active" />
            
            <!-- Main status text -->
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:text="@string/status_discovering"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />
            
            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
            
            <!-- Transport breakdown: BT count -->
            <ImageView
                android:id="@+id/icon_bt"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_bluetooth"
                android:visibility="gone"
                app:tint="@color/transport_bt" />
            <TextView
                android:id="@+id/count_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="11sp"
                android:textColor="@color/transport_count"
                android:visibility="gone" />

            <!-- Transport breakdown: WiFi Direct count -->
            <ImageView
                android:id="@+id/icon_wd"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_wifi_direct"
                android:visibility="gone"
                app:tint="@color/transport_wd" />
            <TextView
                android:id="@+id/count_wd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="11sp"
                android:textColor="@color/transport_count"
                android:visibility="gone" />

            <!-- Transport breakdown: WiFi Aware (NAN) count -->
            <ImageView
                android:id="@+id/icon_nan"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_wifi_aware"
                android:visibility="gone"
                app:tint="@color/transport_nan" />
            <TextView
                android:id="@+id/count_nan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="8dp"
                android:textSize="11sp"
                android:textColor="@color/transport_count"
                android:visibility="gone" />

            <!-- Transport breakdown: LAN/WiFi count -->
            <ImageView
                android:id="@+id/icon_lan"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_wifi"
                android:visibility="gone"
                app:tint="@color/transport_lan" />
            <TextView
                android:id="@+id/count_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:textSize="11sp"
                android:textColor="@color/transport_count"
                android:visibility="gone" />
                
        </LinearLayout>

        <!-- Row 2: Filter controls (compact horizontal layout) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Filter: show only liked messages -->
            <CheckBox
                android:id="@+id/switch_only_liked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feed_filter_liked"
                android:textSize="13sp"
                android:textColor="@color/text_secondary"
                android:minHeight="32dp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Sort toggle: Recent / Most hearted -->
            <TextView
                android:id="@+id/btn_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feed_sort_recent"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Restore swiped/hidden messages -->
            <TextView
                android:id="@+id/btn_show_hidden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/feed_restore_swiped"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

        </LinearLayout>

    </LinearLayout>

    <!-- Swipe refresh with message list -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_messages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingHorizontal="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="8dp" />

            <!-- Empty state -->
            <LinearLayout
                android:id="@+id/empty_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone">

                <ImageView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_feed"
                    android:alpha="0.4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/empty_feed"
                    android:textColor="@color/text_secondary"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp" />

            </LinearLayout>

        </FrameLayout>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
