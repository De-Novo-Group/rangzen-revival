<?xml version="1.0" encoding="utf-8"?>
<!-- Broadcast message card layout - distinctive orange styling -->
<!-- These are messages from De Novo Group via the Internet -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="3dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/broadcast_bg"
    app:strokeWidth="1dp"
    app:strokeColor="@color/broadcast_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Orange indicator bar (narrow, full height) -->
        <View
            android:id="@+id/broadcast_indicator"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:background="@color/broadcast_orange" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="10dp"
            android:paddingVertical="8dp">

            <!-- Header: "De Novo Group - via the Internet" badge -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Internet icon indicator -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“¡"
                    android:textSize="12sp"
                    android:layout_marginEnd="4dp" />

                <!-- Source label -->
                <TextView
                    android:id="@+id/text_source"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="De Novo Group Â· via the Internet"
                    android:textSize="11sp"
                    android:textColor="@color/broadcast_orange"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/text_timestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:textColor="@color/text_hint" />

            </LinearLayout>

            <!-- Broadcast title -->
            <TextView
                android:id="@+id/text_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textSize="15sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"
                android:lineSpacingMultiplier="1.1" />

            <!-- Broadcast body -->
            <TextView
                android:id="@+id/text_body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:lineSpacingMultiplier="1.15" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
